<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.imagelab.smartpowerman.LoginActivity"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activity_login2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.imagelab.smartpowerman.LoginActivity"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/splash"
            android:id="@+id/imageView"
            android:layout_height="200dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/user_id"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/idEditText"
                android:layout_weight="1"
                android:hint="@string/user_id_hint" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="@string/user_pwd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pwdEditText"
                android:layout_weight="1"
                android:hint="@string/user_pwd_hint" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/user_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signInButton"
                android:layout_weight="1"
                android:layout_marginLeft="30dp" />

            <Button
                android:text="@string/user_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpButton"
                android:layout_weight="1"
                android:layout_marginRight="30dp" />

        </LinearLayout>

        <TextView
            android:text="@string/user_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/splash"
        android:id="@+id/imageView"
        android:layout_height="200dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/user_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:hint="@string/user_id_hint" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="@string/user_pwd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_weight="1"
            android:hint="@string/user_pwd_hint" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/user_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            android:layout_marginLeft="30dp" />

        <Button
            android:text="@string/user_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_marginRight="30dp" />

    </LinearLayout>

    <TextView
        android:text="@string/user_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal" />

</LinearLayout>
